@namespace Taller.Frontend.Components.Pages.Employees
@using Taller.Shared.Entities

@if (employee is null)
{
    <Loading />
}
else
{
    <MudDialog>
        <DialogContent>
            <EmployeeForm Employee="employee"
                          OnValidSubmit="SaveAsync"
                          ReturnAction="CloseDialog" />
        </DialogContent>
    </MudDialog>
}
