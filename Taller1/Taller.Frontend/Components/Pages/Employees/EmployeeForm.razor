@using Microsoft.AspNetCore.Components.Forms
@using Taller.Shared.Entities
@namespace Taller.Frontend.Components.Pages.Employees

<EditForm EditContext="editContext" OnValidSubmit="OnValidSubmit">
    <DataAnnotationsValidator />
    <ValidationSummary />

    <MudTextField Label="Nombre"
                  @bind-Value="Employee.FirstName"
                  For="@(() => Employee.FirstName)"
                  Required="true"
                  Class="mb-3" />

    <MudTextField Label="Apellido"
                  @bind-Value="Employee.LastName"
                  For="@(() => Employee.LastName)"
                  Required="true"
                  Class="mb-3" />

    <!-- FIX: especificar el genérico -->
    <MudCheckBox T="bool"
                 @bind-Checked="Employee.IsActive"
                 Class="mb-3">
        Activo
    </MudCheckBox>

    <!-- FIX: MudDatePicker usa DateTime?; bindeamos a una propiedad puente -->
    <MudDatePicker Label="Fecha de Ingreso"
                   @bind-Date="HireDateNullable"
                   Required="true"
                   Class="mb-3" />

    <MudNumericField T="decimal"
                     Label="Salario"
                     @bind-Value="Employee.Salary"
                     For="@(() => Employee.Salary)"
                     Min="0"
                     Immediate="true"
                     Class="mb-4" />

    <MudStack Row="true" Spacing="2">
        <MudButton Variant="Variant.Outlined"
                   StartIcon="@Icons.Material.Filled.ArrowBack"
                   Color="Color.Info"
                   OnClick="ReturnAction">
            Cancelar
        </MudButton>

        <MudButton Variant="Variant.Filled"
                   StartIcon="@Icons.Material.Filled.Check"
                   Color="Color.Primary"
                   ButtonType="ButtonType.Submit">
            Guardar
        </MudButton>
    </MudStack>
</EditForm>
